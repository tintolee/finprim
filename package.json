{
  "name": "finprim",
  "version": "0.1.0",
  "description": "Financial primitives for modern TypeScript applications",
  "author": "Oluwatosin Adelaja , Silke Nodwell,Mohammead Hassani Sadiq, Nick Goddard ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tintolee/finprim.git"
  },
  "keywords": [
    "fintech",
    "typescript",
    "iban",
    "sort-code",
    "currency",
    "validation",
    "formatting",
    "financial",
    "primitives",
    "zod"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/zod/index.d.ts",
      "import": "./dist/zod/index.mjs",
      "require": "./dist/zod/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "devDependencies": {
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.0.0",
    "jsdom": "^28.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}
